@using egorDipl.Data.Models
@inject IUserProvider UserProvider
@inject HttpClient Http
@rendermode InteractiveServer

<head>
    <style>
        .top-row {
        background-color: #1a1a1a;
        padding: 10px 0;
        display: flex;
        justify-content: center;
        }

        .nav-scrollable {
        display: flex;
        justify-content: center;
        background-color: #1a1a1a;
        padding: 10px 0;
        }

        .nav {
        display: flex;
        gap: 20px;
        }

        .nav-link {
        color: white;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        }

        .nav-link:hover {
        background-color: white;
        color: black;
        }

    </style>
</head>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/merops" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Мероприятия
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/companies">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Компании
            </NavLink>
        </div>

        @if (UserProvider.Role != null)
        {
            @if (UserProvider.Role.Name != "Пользователь")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/users">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Пользователи
                    </NavLink>
                </div>                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/orders">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Запросы
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/coops">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Сотрудничества
                    </NavLink>
                </div>
            }
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/profile">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Профиль
            </NavLink>
        </div>

        @if (UserProvider.Role != null)
        {
            if (UserProvider.Role.Name != "Владелец")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/notifications">
                        <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span>
                        Уведомление

                        @if (notificationCount > 0)
                        {
                            <span style="background-color: red; color: white; border-radius: 10px; padding: 2px 6px; margin-left: 5px; font-size: 0.8rem;">
                                @notificationCount
                            </span>
                        }
                    </NavLink>
                </div>
            }
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true" style="color: darkred;"></span> Выйти
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private int notificationCount;

    protected override async Task OnInitializedAsync()
    {
        notificationCount = (await Http.GetFromJsonAsync<List<Notification>>("api/Notification")).Count(n => n.CompanyId == UserProvider.CompanyId && n.NotificationStatus == Data.Enums.NotificationStatus.Sended);
    }
}