@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<div class="page">
    <div class="sidebar">
        @if (!(NavigationManager.Uri.EndsWith("/") || NavigationManager.Uri.EndsWith("/auth")))
        {
            <NavMenu />
        }
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>